# Ignore vendor directory (contains Composer dependencies)
/vendor/

# Ignore any log files generated by your application
/log/

# Ignore any temporary files or directories
/tmp/
.temp/

# Ignore any files or directories related to user uploads
/uploads/

# Ignore environment-specific configuration files
/config/env.php

# Ignore Composer lock file
composer.lock

# Ignore PHPStorm project files (if you use PHPStorm)
.idea/

# Ignore local development environment files
.env

# Ignore the .DS_Store file on macOS
.DS_Store

# Ignore session files
/sessions/

# Ignore PHPUnit configuration
phpunit.xml

# Ignore PHP Code Coverage reports
/coverage/

# Ignore PHPStorm workspace files
/.phpstorm.meta.php
/.phpstorm.stubs.php

# Ignore Node.js dependencies and modules (if you also work with JavaScript)
/node_modules/

# Ignore log files and crash reports (for Windows users)
*.log
*.log.*
*.stackdump